<web-app>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.sda.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalcServlet</servlet-name>
        <servlet-class>com.sda.CalcServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalcFormServlet</servlet-name>
        <servlet-class>com.sda.CalcFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello-world</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CalcServlet</servlet-name>
        <url-pattern>/calc/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalcFormServlet</servlet-name>
        <url-pattern>/calc-form</url-pattern>
    </servlet-mapping>
</web-app>